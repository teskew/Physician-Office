h1>Login</h1>
<h3><%= flash[:message] if flash[:message] %></h3>

<%= form_for(:user, url: login_path) do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>
    <%= f.submit "Log In" %>
<% end %>